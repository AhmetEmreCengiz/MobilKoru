<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modern_background"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_settings_modern"
        app:tint="@color/text_dark"
        android:contentDescription="@string/app_name" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/modern_card_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:contentPadding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgMainIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GÜVENLİ"
                android:textColor="@color/status_safe"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"/>

            <View
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:background="#ECEFF1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistem şu an beklemede."
                android:textColor="@color/text_grey"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggle"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="KORUMAYI BAŞLAT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/primary_blue"
                app:cornerRadius="12dp"
                android:elevation="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="            MobilKoru Security \nDeveloped by Ahmet Emre Cengiz"
        android:textColor="#90A4AE"
        android:textStyle="bold"
        android:textSize="12sp"/>

</RelativeLayout>